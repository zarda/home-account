rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Currencies collection (shared exchange rates cache)
    match /currencies/{document=**} {
      // Any authenticated user can read cached rates
      allow read: if isAuthenticated();
      // Any authenticated user can update the cache
      allow write: if isAuthenticated();
    }

    // Users collection
    match /users/{userId} {
      // Users can only read/write their own document
      allow read, write: if isOwner(userId);

      // Transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }

      // Budgets subcollection
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }

      // Categories subcollection
      match /categories/{categoryId} {
        allow read, write: if isOwner(userId);
      }

      // Recurring transactions subcollection
      match /recurring/{recurringId} {
        allow read, write: if isOwner(userId);
      }

      // Any other subcollections under user
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
